Bootstrap: docker
From: nvidia/cuda:12.2.0-devel-ubuntu20.04 

%post
    apt-get update && apt-get install -y python3-dev ca-certificates git wget sudo vim iputils-ping ssh build-essentials byobu apt-utils curl

    curl -O https://bootstrap.pypa.io/get-pip.py && \
    python get-pip.py && \
    rm get-pip.py

%environment
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%runscript
#!/bin/bash
    export PS1="(singularity)\[\033[38;5;34m\]\u@\h\[$(tput sgr0)\]\[\033[38;5;76m\]:\[$(tput sgr0)\]\[\033[38;5;172m\]\w\[$(tput sgr0)\]\[\033[38;5;158m\]\\$\[$(tput sgr0)\] \[$(tput sgr0)\]"
    /bin/bash --norc
