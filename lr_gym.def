Bootstrap: docker-daemon
From: lr-gym:cuda11.1.1-noetic-desktop-full

%post
    apt-get update && apt-get install -y xorg kbd
    echo 'allowed_users = anybody' > /etc/X11/Xwrapper.config
%environment

%runscript
#!/bin/bash
    echo "Singularity runscript: starting bash"
    export PS1="(singularity)\[\033[38;5;34m\]\u@\h\[$(tput sgr0)\]\[\033[38;5;76m\]:\[$(tput sgr0)\]\[\033[38;5;172m\]\w\[$(tput sgr0)\]\[\033[38;5;158m\]\\$\[$(tput sgr0)\] \[$(tput sgr0)\]"
    source /opt/ros/noetic/setup.bash
    echo "Sourced /opt/ros/noetic"
    /bin/bash --norc
